<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" href="/css/general.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WEGAME!</title>
</head>

<body>
  <div class="bg"></div>
  <%- include('partials/nav') %>
    <div class="container mt-5">
      <div class="row accordion" id="accordion">
        <% const games = gameList %>
        <% categoryList.forEach((category, index)=> { %>
          <% if (category.isActive) { %>
            <%
                var categoryGames = games.filter(function(game) {
                    return game.category._id.toString() === category._id.toString();
                });
            %>
            <%- include('partials/category', { category: category, index: index, games: categoryGames }) %>
          <% } %>
        <% }) %>
      </div>
    </div>

    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/general.js"></script>
</body>

</html>