<div class="col-2 col-md-3"></div>
<div class="col-8 col-md-6">
    <div class="row text-center pb-5" style="min-width: 250px;">
        <img src="/images/game/<%= imageUrl %>" class="image-fit-contain" alt="<%= name %>">
        <div class="mt-4 text-center">
            <h4 class="gameName">
                <%= name %>
            </h4>
        </div>
        <div class="mt-3 text-center">
            <div class="text-white mt-1">
                <div class="gameDescription">
                    <p class="mx-3 my-3 gameDescriptionContent">
                        <%= description %>
                    </p>
                </div>
                <div class="my-5"><img src="<%= qrImage %>" alt="QR Code"></div>
                <button id="btnPlay" class="btn play mt-3 playButton">
                    <a id="hrefPlay" href="/games/game2/" target="_blank" class="btn" style="color: white;">Play</a>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="col-2 col-md-3"></div>