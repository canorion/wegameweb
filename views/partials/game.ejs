<div class="col-2 col-md-3"></div>
<div class="col-8 col-md-6">
    <div class="row text-center pb-5" style="min-width: 250px;">
        <img src="/images/game/<%= imageUrl %>" class="image-fit-contain" alt="<%= name %>">
        <div class="mt-4 text-center">
            <h4 class="gameName">
                <%= name %>
            </h4>
        </div>
        <div class="mt-3 text-center">
            <div class="text-white mt-1">
                <div class="gameDescription">
                    <p class="mx-3 my-3 gameDescriptionContent">
                        <%= description %>
                    </p>
                </div>
                <div class="mt-3">
                    <div class="teamSelectorWrapper text-center">
                        <div class="row pt-5">
                            <div class="col-12" style="font-family: VT323; font-size: 20px;">
                                Home Team
                            </div>
                        </div>
                        <div class="row pt-2">
                            <div class="col-12" style="font-family: VT323; font-size: 20px;">
                                <%- include('team', { ddName: 'homeTeam' , teams: teamList, relatedDD: 'awayTeam' }) %>
                            </div>
                        </div>
                        <div class="row pt-4">
                            <div class="col-12" style="font-family: VT323; font-size: 20px;">
                                Away Team
                            </div>
                        </div>
                        <div class="row pt-2 pb-5">
                            <div class="col-12" style="font-family: VT323; font-size: 20px;">
                                <%- include('team', { ddName: 'awayTeam' , teams: teamList, relatedDD: 'homeTeam' }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <button id="btnPlay" class="btn play mt-3 playButton" disabled>
                    <a id="hrefPlay" href="#" target="_blank" class="btn" style="color: white;">Play</a>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="col-2 col-md-3"></div>