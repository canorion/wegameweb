<div class="col-12 col-md-6">
    <div class="row">
        <div class="col-lg-12">
            <div class="card accordion-item product_list">
                <div class="card-header accordion-header">
                    <div class="btn btn-link accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#item<%= index %>"
                        aria-expanded="true">
                        <div class="list_block">
                            <div class="list_image">
                                <img src="/images/category/<%= category.imageUrl %>" class="image-fit-contain" alt="img" style="margin-top: -20px;" />
                            </div>
                            <div class="list_text">
                                <p class="categoryName text-nowrap"><%= category.name %></p>
                                <!-- <h5 class="title">Chair &amp; Sofa</h5> -->
                                <p class="categoryDescription text-nowrap"><%= category.description %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="item<%= index %>" class="accordion-collapse collapse pb-5" data-bs-parent="#accordion">
                    <div class="card-body">
                        <div class="row" style=" display: flex; ">
                            <% games.forEach(game => { %>
                                <div class="col-6">
                                    <div class="gameContainer">
                                        <a href="/game/<%= game._id %>">
                                            <img src="/images/game/<%= game.imageUrl %>" class="image-fit-contain2" alt="<%= game.name %>">
                                            <p class="gameName"><%= game.name %></p>
                                            <h6 class="gameDescription"><%= game.description %></h6>
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>